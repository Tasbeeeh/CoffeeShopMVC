@using CoffeeShopBLL.ModelVMs.CartItem
@model List<CartItemVM>

<h2>My Cart</h2>

<!-- Add Product Form -->
<h4>Add Product</h4>
<form asp-action="Add" method="post">
    <label>Product Id:</label>
    <input type="number" name="ProductId" min="1" />
    <label>Cart Id:</label>
    <input type="number" name="CartId" min="1" />
    <label>Quantity:</label>
    <input type="number" name="Quantity" min="1" value="1" />
    <button class="btn btn-success btn-sm">Add Item</button>
</form>

<hr />

<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>
                <!-- Update Quantity Form -->
                <form asp-action="Update" method="post" style="display:inline;">
                    <input type="hidden" name="cartId" value="@item.CartId" />
                    <input type="hidden" name="productId" value="@item.ProductId" />
                    <input type="number" name="Quantity" value="@item.Quantity" min="1" style="width:60px;" />
                    <button class="btn btn-primary btn-sm">Update</button>
                </form>
            </td>
            <td>@item.UnitPrice.ToString("0.00")</td>
            <td>@item.TotalPrice.ToString("0.00")</td>
            <td>
                <!-- Delete Form -->
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="cartId" value="@item.CartId" />
                    <input type="hidden" name="productId" value="@item.ProductId" />
                    <button class="btn btn-danger btn-sm">Remove</button>
                </form>
            </td>
        </tr>
    }
</table>
