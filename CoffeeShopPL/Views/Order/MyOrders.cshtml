@using CoffeeShopBLL.ModelVMs.Order
@using CoffeeShopDAL.Entities.Enums
@model List<OrderVM>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="p-3">My Orders</h1>



<table class="table table-bordered table-striped w-75 mx-auto">
    <thead>
        <tr>
            <th>#</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Details</th>

            <th>Cancel</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int count = 1;
            foreach (var order in Model)
            {
                <tr p-5>
                    <td>@count</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.OrderStatus</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="text-black text-decoration-none">Show</a>
                    </td>
                    <td>
                        @if (order.OrderStatus != OrderStatus.Confirmed)
                        {
                            <form asp-action="Delete" asp-route-id="@order.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-link text-danger p-0 m-0">Cancel</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-link text-secondary p-0 m-0" disabled>Cancel</button>
                        }

                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No Orders Found</td>
            </tr>
        }
    </tbody>
</table>