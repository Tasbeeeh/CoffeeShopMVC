@using CoffeeShopBLL.ModelVMs.Order
@using CoffeeShopDAL.Entities.Enums
@model List<OrderVM>

<h2>All Orders</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.TotalPrice.ToString("0.00")</td>
                <td>@order.OrderStatus</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="ChangeStatus" method="post" class="d-inline">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <select name="status" class="form-select form-select-sm d-inline w-auto">
                            <option value="Pending" selected="@(order.OrderStatus == OrderStatus.Pending)">Pending</option>
                            <option value="Confirmed" selected="@(order.OrderStatus == OrderStatus.Confirmed)">Confirmed</option>
                            <option value="Cancelled" selected="@(order.OrderStatus == OrderStatus.Cancelled)">Cancelled</option>
                        </select>

                        <button class="btn btn-sm btn-warning">Update</button>
                    </form>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@order.Id" />
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
