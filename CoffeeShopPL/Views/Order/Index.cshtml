@using CoffeeShopBLL.ModelVMs.Order
@model List<OrderVM>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Order</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>User Id</th>
            <th>Cart Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int count = 1;
            foreach (var order in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.UserId</td>
                    <td>@order.CartId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No Orders Found</td>
            </tr>
        }
    </tbody>
</table>