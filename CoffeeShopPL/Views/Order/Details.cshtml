@using CoffeeShopBLL.ModelVMs.Order
@model OrderVM

<h2>Order Details</h2>
<p><strong>Order Id:</strong> @Model.Id</p>
<p><strong>User:</strong> @Model.UserId</p>
<p><strong>Status:</strong> @Model.OrderStatus</p>
<p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
<p><strong>Total Price:</strong> @Model.TotalPrice.ToString("0.00")</p>

<h4>Items:</h4>
@if (Model.Items != null && Model.Items.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("0.00")</td>
                    <td>@item.TotalPrice.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items in this order.</p>
}