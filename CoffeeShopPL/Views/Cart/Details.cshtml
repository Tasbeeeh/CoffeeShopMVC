@model CoffeeShopBLL.ModelVMs.Cart.CartViewModel

@{
    decimal totalPrice = Model.CartItems?.Sum(i => i.Quantity * i.UnitPrice) ?? 0;
    decimal discount = 0;

    if (totalPrice > 5000)
    {
        discount = 200;
        totalPrice -= discount;
    }
}

<h2 class="mb-4">🛒 Your Cart</h2>

@if (discount > 0)
{
    <div class="alert alert-success">
        🎉 Congratulations! You got a discount of $@discount because your total exceeded $5000.
    </div>
}

@if (Model.CartItems != null && Model.CartItems.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-end">Unit Price ($)</th>
                    <th class="text-end">Total ($)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("0.00")</td>
                        <td class="text-end">@((item.Quantity * item.UnitPrice).ToString("0.00"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-secondary fw-bold">
                    <td colspan="3" class="text-end">Subtotal:</td>
                    <td class="text-end">@Model.CartItems.Sum(i => i.Quantity * i.UnitPrice).ToString("0.00")</td>
                </tr>
                @if (discount > 0)
                {
                    <tr class="table-warning fw-bold">
                        <td colspan="3" class="text-end">Discount:</td>
                        <td class="text-end">- $@discount</td>
                    </tr>
                }
                <tr class="table-secondary fw-bold">
                    <td colspan="3" class="text-end">Total Price:</td>
                    <td class="text-end">@totalPrice.ToString("0.00")</td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
        <!-- Place Order -->
        <form asp-action="PlaceOrder" asp-controller="Order" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <button class="btn btn-success btn-lg">
                <i class="bi bi-bag-check"></i> Place Order
            </button>
        </form>

        <!-- Clear Cart -->
        <form asp-action="Clear" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to clear your cart?');">
            <input type="hidden" name="cartId" value="@Model.Id" />
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="bi bi-trash3"></i> Clear Cart
            </button>
        </form>

        <!-- Delete Cart -->
        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete the cart?');">
            <input type="hidden" name="cartId" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-x-circle"></i> Delete Cart
            </button>
        </form>
    </div>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        🛒 Your cart is empty. Start adding products to see them here!
    </div>
}
