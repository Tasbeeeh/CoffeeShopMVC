@model List<CoffeeShopPL.Controllers.CartController.CartProduct>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Home" asp-action="Index">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th class="text-end">Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-end">@item.Price.ToString("C")</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.Total.ToString("C")</td>
                            <td>
                                <a asp-action="Remove" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-active">
                        <th colspan="3" class="text-end">Cart Total:</th>
                        <th class="text-end">@ViewBag.CartTotal.ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                ← Continue Shopping
            </a>
            <form asp-action="Checkout" method="post">
                <button type="submit" class="btn btn-success btn-lg">
                    Proceed to Checkout →
                </button>
            </form>
        </div>
    }
</div>