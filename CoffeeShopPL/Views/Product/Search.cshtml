@using CoffeeShopBLL.ModelVMs.Product
@model List<ProductVM>

<div class="text-center my-5">
    <h2>Search Results</h2>
    <p class="text-muted">
        Results for "@Context.Request.Query["term"]"
    </p>
</div>

<div class="row w-100 d-flex justify-content-center p-3">
    @foreach (var p in Model)
    {
        <div class="col-md-3 d-flex justify-content-center mb-4">
            <a asp-controller="Product"
               asp-action="Details"
               asp-route-id="@p.Id"
               class="text-decoration-none w-100">

                <div class="card product-card h-100">

                    <div class="img-wrapper">
                        <img src="~/images/@p.Image" alt="@p.Name" />
                    </div>

                    <div class="card-body">
                        <small class="text-muted text-uppercase">
                            @p.CategoryName
                        </small>

                        <h6 class="product-title">@p.Name</h6>

                        <div class="d-flex justify-content-between mt-4">
                            <p class="price">@p.Price.ToString("0.00") EGP</p>
                            <button class="add-to-cart-btn">
                                <i class="bi bi-cart"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </a>
        </div>
    }
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
