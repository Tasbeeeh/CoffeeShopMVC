@model CoffeeShopBLL.ModelVMs.Product.ProductVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row align-items-center">

        <div class="col-md-6 text-center">
            <img src="~/assets/img/@Model.Image"
                 class="img-fluid rounded shadow-sm"
                 style="height:500px;  object-fit:cover;" />
                 
        </div>

        <div class="col-md-6">
            <h3 class=" mb-3 product-category">@Model.CategoryName.ToUpper()</h3>
            <h1 class="mb-3">@Model.Name</h1>


            <p class="text-muted">
                @Model.Description
            </p>

            <h4 class="fw-bold text-black mb-4">
                @Model.Price.ToString("0.00") EGP
            </h4>

            <p class="mb-2">
                <strong>Size:</strong> @Model.ProductSize
            </p>

            <p class="mb-3">
                <strong>Status:</strong>
                @if (Model.InStock)
                {
                    <span class="text-success">Available</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>
            <div class="d-flex mb-4">
                <p class="text-black me-4 mt-2" >Quantity:</p>
                <div class="qty d-flex align-items-center" style="border: 1px solid #000; padding: 0px 30px; border-radius: 20px;">
                    <button class="border-0" type="button" onclick="decrease()">-</button>
                    <span class="mx-4" id="qtyValue">1</span>
                    <button class="border-0" type="button" onclick="increase()">+</button>
                </div>
            </div>

            <div class="d-flex gap-2 ">
                <button class="btn btn-dark btn-add-cart w-100" style="border-radius: 20px; padding: 15px 0px">
                    🛒 Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    let qty = 1;

    function increase() {
        qty++;
        document.getElementById("qtyValue").innerText = qty;
    }

    function decrease() {
        if (qty > 1) {
            qty--;
            document.getElementById("qtyValue").innerText = qty;
        }
    }
</script>
