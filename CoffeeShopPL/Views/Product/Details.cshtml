@model CoffeeShopBLL.ModelVMs.Product.ProductVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row align-items-center">

        <div class="col-md-6 text-center">
            <img src="~/assets/img/@Model.Image"
                 class="img-fluid rounded shadow-sm"
                 style="max-height:350px; object-fit:cover;" />
        </div>

        <div class="col-md-6">
            <h3 class="text-secondary mb-3">@Model.Name</h3>

            <p class="text-muted">
                @Model.Description
            </p>

            <h4 class="fw-bold text-secondary mb-4">
                @Model.Price.ToString("0.00") EGP
            </h4>

            <p class="mb-2">
                <strong>Size:</strong> @Model.ProductSize
            </p>

            <p class="mb-3">
                <strong>Status:</strong>
                @if (Model.InStock)
                {
                    <span class="text-success">Available</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>

            <div class="d-flex gap-2">
                <a asp-action="Browse"
                   class="btn btn-outline-secondary">
                    ⬅ Back
                </a>

                <button class="btn btn-dark">
                    🛒 Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>
