<script>
    let qty = 1;
    let maxQuantity = @Model.Quantity;
    let maxQty = document.querySelector(".max-qty");

    function increase() {
        if (qty < maxQuantity) {
            qty++;
            document.getElementById("qtyValue").innerText = qty;
                    document.getElementById("hiddenQty").value = qty; 

        }

        if (qty === maxQuantity) {
            maxQty.style.display = "none";
        }
    }

    function decrease() {
        if (qty > 1) {
            qty--;
            document.getElementById("qtyValue").innerText = qty;
                    document.getElementById("hiddenQty").value = qty; 

            maxQty.style.display = "block";
        }
    }
