@model CoffeeShopBLL.ModelVMs.User.LoginVM

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4 mt-3">Login ☕</h2>

<form asp-action="Login" method="post" class="w-50 mx-auto my-3">

    <!-- Username or Email -->
    <div class="mb-3">
        <label asp-for="UserNameOrEmail" class="form-label">Username or Email</label>
        <input asp-for="UserNameOrEmail" class="form-control" />
        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Remember Me -->
    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
    </div>
    <div class="text-danger mb-3">
        @Html.ValidationSummary(true)
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary w-50">Login</button>

</div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
